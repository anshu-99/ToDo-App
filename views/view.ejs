<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/a5f47a3b96.js" crossorigin="anonymous"></script>
    <title>
        <%= title %>
    </title>
    <style>
        body {
            font-family: Arial, sans-serif;
            overflow: hidden;
            padding-top: 20px;
            background-color: rgb(183, 234, 217);
        }

        #main {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .list {
            padding-top: 30px;
            width: 500px;
            height: 400px;
            overflow: auto; /* Enable scrolling */
            border: 1px solid #000; /* Add border for the task list */
            background-color: rgb(125, 200, 206);
        }

        .container {
            width: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #0f0e0e;
            border-radius: 5px;
            background-color: rgb(190, 232, 232);
        }

        h1 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input[type="text"],
        select,
        input[type="date"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #141212;
            border-radius: 4px;
        }

        .category-box {
            width: 20px;
            height: 20px;
            display: inline-block;
            margin-right: 5px;
            border-radius: 5px;
        }

        .work {
            border: 2px solid black;
            border-radius: 5%;
            background-color: #3498db;
        }

        .personal {
            border: 2px solid black;
            border-radius: 5%;
            background-color: #e74c3c;
        }

        .shopping {
            border: 2px solid black;
            border-radius: 5%;
            background-color: #2ecc71;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 5px;
        }

        button[type="submit"] {
            display: block;
            margin: 10px auto;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }

        .delete-button {
            display: inline-block;
            padding-bottom: 15px;
        }

        .delete-button a {
            text-decoration: none;
            border: 2px solid black;
            box-shadow: 5px 2px 5px 2px rgba(19, 27, 50, 0.300);
            padding: 5px;
            border-radius: 20px;
            color: rgb(8, 0, 5);
            background-color: #e3f2fd;
            font-family: Arial, Helvetica, sans-serif;
        }

        .delete-button a:hover {
            color: rgba(10, 114, 142, 0.941);
        }
    </style>
</head>

<body>
    <div id="main">
        <div class="container">
            <h1>To-Do List</h1>
            <form id="todo-form" method="post" action="/form_data">
                <div class="form-group">
                    <label for="taskDescription">Task Description:</label>
                    <input type="text" id="taskDescription" name="taskDescription" required>
                </div>
                <div class="form-group">
                    <label for="category">Category:</label>
                    <select id="category" name="category" required>
                        <option value="work">Work</option>
                        <option value="personal">Personal</option>
                        <option value="shopping">Shopping</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="taskDate">Date:</label>
                    <input type="date" id="taskDate" name="taskDate" required>
                </div>
                <div class="form-group">
                    <button type="submit"><i class="fa-solid fa-plus"></i>Add Task</button>
                </div>
            </form>
        </div>
        <div class="list">
            <ol>
                <% for(let i of data_list){ %>
                    <li>
                        <p>
                            <i class="fa-solid fa-thumbtack"></i>
                            Task Description:<%= i.taskDescription %><br>
                            Category:<%= i.category %><br>
                            Date:<i class="fa-solid fa-calendar-days"></i>
                            <%= (i.taskDate) %><br>
                        </p>
                        <div class="delete-button" style="text-decoration: none;">
                            <a href="/delete-contact/?id=<%= i.id%>">
                                <i class="fa-solid fa-check"></i>
                                Completed
                            </a>
                        </div>
                    </li>
                <% } %>
            </ol>
        </div>
    </div>
    
</body>

</html>
